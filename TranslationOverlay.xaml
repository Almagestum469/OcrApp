<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="OcrApp.TranslationOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:OcrApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"    mc:Ignorable="d">    <Grid Background="Transparent" Padding="0">
        <StackPanel Spacing="10" Margin="12">
                <!-- 只显示翻译结果，不显示原文 -->
                <TextBlock x:Name="TranslationTextBlock" 
                          Text="翻译结果将在这里显示..."
                          Foreground="#FFD700"
                          FontSize="14"
                          FontWeight="Normal"
                          TextWrapping="Wrap"
                          Margin="0,6,0,0" />
                <!-- 控制按钮 -->
                <StackPanel Orientation="Horizontal" 
                           HorizontalAlignment="Right"
                           Spacing="10"
                           Margin="0,10,0,0">
                    <Button x:Name="PinButton" 
                           Content="📍" 
                           Click="PinButton_Click"
                           Background="Transparent"
                           Foreground="White"
                           BorderBrush="#40FFFFFF"
                           Width="32"
                           Height="32"
                           FontSize="16"
                           Padding="0"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           ToolTipService.ToolTip="固定/取消固定" />
                    <Button x:Name="CloseButton" 
                           Content="✖" 
                           Click="CloseButton_Click"
                           Background="Transparent"
                           Foreground="#FF6B6B"
                           BorderBrush="#40FFFFFF"
                           Width="32"
                           Height="32"
                           FontSize="16"
                           Padding="0"
                           HorizontalContentAlignment="Center"
                           VerticalContentAlignment="Center"
                           ToolTipService.ToolTip="关闭" />
                </StackPanel>
            </StackPanel>
    </Grid>
</Window>
